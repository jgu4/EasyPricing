<div>
  <div>
    <h1>
      View of cost for all items
    </h1>
  </div>
</div>


<%# <hr>

<div>
  <div>
    <h2>
      Add a new costing
    </h2>

    <form action="/insert_costing" method="post">

      <div>
        <label for="item_id_box">
          Item
        </label>

        <input type="text" id="item_id_box" name="query_item_id">
      </div>

      <div>
        <label for="cost_value_box">
          Cost input ($)
        </label>

        <input type="text" id="cost_value_box" name="query_cost_value">
      </div>



      <div>
        <label for="costing_type_box">
          Costing type
        </label>

        <input type="text" id="costing_type_box" name="query_costing_type">
      </div>

      <button>
        Create costing
      </button>
    </form>
  </div>
</div> 

<hr>
<div>
  <div>
    <table border ="1">
      <tr>
        <%# <th>
          ID
        </th> %>
<table border = "1">
        <th>          Item number        </th>

        <th>          Item description        </th>

        <th>          Cost input ($)        </th>

        <th>          Costing type        </th>

        <th>          Created at        </th>

        <th>          Updated at        </th>

        <th>        Edit or Delete        </th>
      </tr>

      <% @list_of_costings.each do |a_costing| %>
      <tr>
        <td>
        <%# <% an_item=Item.where(:id=>)a_costing.id %> 
          <%= a_costing.item_id %>
        </td>

        <td>
          <%= a_costing.item_id %>
        </td>

        <td>
          <%= a_costing.cost_value %>
        </td>

        <td>
          <%= a_costing.costing_type %>
        </td>

        <td>
          <%= time_ago_in_words(a_costing.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_costing.updated_at) %> ago
        </td>

        <td>
          <a href="/costings/<%= a_costing.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
